<resources>
    <!-- Base application theme. -->
    <style name="Theme.KickTheHouse" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/light_blue_gray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/light_blue_gray</item>
        <item name="colorOnSecondary">@color/light_blue_gray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!-- Set cursor color -->
        <item name="android:textColor">@color/black</item>
        <!-- Set icon color -->
        <item name="android:textColorSecondary">@color/black</item>

        <item name="android:windowBackground">@color/light_blue_gray</item>

        <item name="fontFamily">@font/opensans</item>

    </style>
</resources>