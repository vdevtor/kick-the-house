<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <View
        android:id="@+id/modeSwitch"
        android:layout_width="@dimen/switch_width"
        android:layout_height="@dimen/switch_height"
        android:layout_centerInParent="true"
        android:textOff=""
        android:textOn=""
        android:background="@drawable/custom_switch_bg"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/modeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/modeSwitch"
        android:layout_centerInParent="true"
        android:layout_alignEnd="@id/modeSwitch"
        android:text="Manual"
        android:textSize="14sp"
        android:elevation="10dp"
        android:textColor="#FFFFFF"
        android:gravity="center|top"/>

</RelativeLayout>
